<% layout('layouts/boilerplate') %>
<section
  class="row gx-5 mx-0 mx-lg-5 overflow-y-auto no-scrollbar min-height-100-vh pb-5"
>
  <section class="bg-light rounded">
    <article class="d-flex flex-column align-items-center">
      <!--* Large Screens and Up -->
      <img
        class="img-fluid my-5 w-25 d-none d-lg-block"
        src="/assets/svgs/checkout/free-registration.svg"
        alt="Order Confirmation Image"
      />

      <!--* Small to Medium Screens -->
      <img
        class="img-fluid my-5 w-50 d-none d-sm-block d-lg-none"
        src="/assets/svgs/checkout/free-registration.svg"
        alt="Order Confirmation Image"
      />

      <img
        class="img-fluid my-5 d-sm-none"
        src="/assets/svgs/checkout/free-registration.svg"
        alt="Order Confirmation Image"
      />
      <h1 class="display-2 mb-3">You're all set!</h1>

      <!--* This displays to the user the ticket quantity and event name of the purchased event -->
      <div class="card my-3">
        <!--? Single Ticket -->
        <div class="card-body">
          <p class="lead text-center">
            <%= attendant.ticketQuantity %> ticket for <%= attendant.eventName
            %>
          </p>
          <p class="lead text-center mb-0"><%= attendant.dateTime %></p>
        </div>
      </div>

      <p class="lead text-center mb-3">
        Check your email for event registration confirmation.
      </p>

      <p class="lead text-center">
        We appreciate your participation! If you have any questions, please
        email us at
        <a class="text-primary-emphasis" href="mailto:info@penn-northwest.com"
          >info@penn-northwest.com</a
        >
      </p>
      <a class="btn btn-primary mt-3" href="/">Return Home</a>
    </article>
  </section>
</section>
