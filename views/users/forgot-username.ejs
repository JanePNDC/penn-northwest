<% layout('layouts/boilerplate') %>

<section
  class="row gx-5 mx-0 mx-lg-5 overflow-y-auto no-scrollbar min-height-90-vh pb-5"
>
  <section
    class="bg-light rounded d-flex flex-column justify-content-center align-items-center"
  >
    <div class="card shadow">
      <div class="card-header"><strong>Request Username</strong></div>
      <div class="card-body d-flex flex-column">
        <p class="card-title mb-3">
          Enter the email address you use to sign in.
        </p>
        <form method="post">
          <input class="d-none" type="text" name="honeypot" />
          <input
            class="mb-3 w-100"
            type="email"
            name="email[email]"
            id="email"
            required
          />

          <button type="submit" class="w-100 btn btn-sm btn-outline-secondary">
            Get Username
          </button>
        </form>
      </div>
    </div>
    <a class="mt-3 text-decoration-underline" href="/login">Go back to login</a>
  </section>
</section>
