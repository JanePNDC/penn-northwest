<section
  class="row gx-5 mx-0 mx-lg-5 overflow-y-auto no-scrollbar min-height-90-vh pb-5"
>
  <section
    class="bg-light rounded d-flex flex-column justify-content-center align-items-center"
  >
    <div class="card shadow">
      <div class="card-header"><strong>Reset account password</strong></div>
      <div class="card-body d-flex flex-column">
        <p class="card-title lead mb-3">
          Enter a new password for user: <strong><%= username %></strong>
        </p>
        <form id="password-form" method="post">
          <input
            class="mb-3 w-100 password-input"
            type="password"
            name="password"
            id="password"
            placeholder="Password"
            pattern="^(?=.*[A-Z])(?=.*\d).+$"
            required
          />
          <input
            class="mb-3 w-100 password-input"
            type="password"
            name="password2"
            id="password2"
            placeholder="Confirm Password"
            minlength="6"
            required
          />
          <div id="warning-div"></div>

          <p class="card-text">
            <small class="text-body-secondary"
              >Min. 6 Characters. 1 Capital and 1 Number</small
            >
          </p>

          <button type="submit" class="w-100 btn btn-outline-success">
            Reset password
          </button>
        </form>
      </div>
    </div>
    <a class="mt-3 text-decoration-underline" href="/login">Go back to login</a>
  </section>
</section>

<script src="/js/users/confirmMatchingPasswords.js"></script>
